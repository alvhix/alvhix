---
import MediaIcon, { IconName } from './MediaIcon.astro';
const today = new Date();
---

<footer class="slds-card footer">
  <div class="slds-card__body slds-card__body_inner">
    <ul class="slds-grid slds-grid_align-center slds-gutters_x-small">
      <li class="slds-col">
        <a href="https://www.linkedin.com/in/alvhix/en" target="_blank">
          <MediaIcon type={IconName.LINKEDIN} />
        </a>
      </li>
      <li class="slds-col">
        <a href="https://trailblazer.me/id/alvhix" target="_blank">
          <MediaIcon type={IconName.TRAILHEAD} />
        </a>
      </li>
      <li class="slds-col">
        <a href="https://twitter.com/alvhix" target="_blank">
          <MediaIcon type={IconName.TWITTER} />
        </a>
      </li>
      <li class="slds-col">
        <a href="https://github.com/alvhix" target="_blank">
          <MediaIcon type={IconName.GITHUB} />
        </a>
      </li>
      <li class="slds-col">
        <a href="/rss.xml" target="_self">
          <MediaIcon type={IconName.RSS} />
        </a>
      </li>
    </ul>
  </div>
  <div class="slds-card__footer">
    <p class="slds-text-align_center">
      <span>&copy; {today.getFullYear()} Alvhix. All rights reserved.</span>
    </p>
  </div>
</footer>
